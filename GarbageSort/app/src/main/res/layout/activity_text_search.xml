<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="请在此输入..."/>

    <TextView
        android:id="@+id/hot_word_title"
        android:layout_below="@id/search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="热搜"
        android:textColor="#212121"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/level01"
        android:layout_below="@id/hot_word_title"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text01"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="1  富士苹果"/>

        <TextView
            android:id="@+id/text02"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:text="2  土豆"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/level02"
        android:layout_below="@id/level01"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#212121"
            android:id="@+id/text03"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text04"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level03"
        android:layout_below="@id/level02"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text05"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text06"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level04"
        android:layout_below="@id/level03"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text07"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text08"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level05"
        android:layout_below="@id/level04"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/text09"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text010"
            android:textColor="#212121"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ListView
        android:background="#F5F5F5"
        android:layout_below="@id/search_view"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>