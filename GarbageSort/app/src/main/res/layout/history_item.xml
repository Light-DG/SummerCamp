<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rec_blue2"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/name_and_kind"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/history_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="富士苹果"/>

            <LinearLayout
                android:id="@+id/history_kind_and_detail"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/history_kind"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="湿垃圾"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/history_detail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:textSize="15dp"
                    android:textColor="#418DF9"/>

            </LinearLayout>



        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="380dp"
            android:layout_height="5dp"
            android:background="#87CEFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name_and_kind"/>

        <LinearLayout
            android:layout_below="@id/line"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_model"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:text="模式：语音识别\n上海市"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/history_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="2020-5-13 16:33:03" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/content"
        android:layout_marginTop="2dp"/>


</RelativeLayout>